#!/bin/sh

# Wait until ngrok creates the tunnel
while [ -z ${EXTERNAL_HOSTNAME} ]
do
  CRITICAL_ERROR=$(cat /var/log/ngrok | grep "\"lvl\":\"crit\"")
  if [ ! -z "${CRITICAL_ERROR}" ]; then
    echo -e "\nğŸ’”  $(echo ${CRITICAL_ERROR} | jq -r .err)"
    stop
  fi

  EXTERNAL_HOSTNAME=$( \
    curl -s http://127.0.0.1:4040/api/tunnels | \
    jq -r .tunnels[0].public_url | \
    sed s/tcp:\\/\\/// \
  )
  if [ ${EXTERNAL_HOSTNAME} == "null" ]; then
    unset EXTERNAL_HOSTNAME
  fi
  sleep 1s
done
echo "${EXTERNAL_HOSTNAME}" > /tmp/DVSYNC_TOKEN
cat /root/.ssh/client_rsa >> /tmp/DVSYNC_TOKEN

echo -e "\nâš¡ï¸ \033[0;32m dvsync server is running!\033[0m To sync, start the client with following environment variable set:"
echo -e "\nğŸ¤«   DVSYNC_TOKEN=$(cat /tmp/DVSYNC_TOKEN | base64 | tr -d '\n')"

# Wait forever
tail -f /dev/null
